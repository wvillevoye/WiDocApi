  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\WiDocApi_Blazor\WiDocApi_Blazor.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="wwwroot\ApiEndpoints.json">
